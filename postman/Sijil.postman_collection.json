{
  "info": {
    "name": "Sijil MVP",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Sijil MVP API"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3001" },
    { "key": "tenantId", "value": "11111111-1111-4111-8111-111111111111" },
    { "key": "email", "value": "partner@sijil.sa" },
    { "key": "password", "value": "Password123!" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" },
    { "key": "clientId", "value": "" },
    { "key": "quoteId", "value": "" },
    { "key": "invoiceId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenantId\": \"{{tenantId}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.collectionVariables.set('accessToken', json.accessToken);",
              "pm.collectionVariables.set('refreshToken', json.refreshToken);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Client",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"عميل تجريبي\",\n  \"email\": \"client@example.com\",\n  \"phone\": \"+966500000002\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/clients", "host": ["{{baseUrl}}"], "path": ["clients"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.collectionVariables.set('clientId', json.id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Quote",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"clientId\": \"{{clientId}}\",\n  \"subtotal\": \"5000.00\",\n  \"tax\": \"750.00\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/billing/quotes", "host": ["{{baseUrl}}"], "path": ["billing", "quotes"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.collectionVariables.set('quoteId', json.id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Convert Quote",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": { "mode": "raw", "raw": "{}" },
        "url": {
          "raw": "{{baseUrl}}/billing/quotes/{{quoteId}}/convert",
          "host": ["{{baseUrl}}"],
          "path": ["billing", "quotes", "{{quoteId}}", "convert"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.collectionVariables.set('invoiceId', json.id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Export Invoice PDF",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": {
          "raw": "{{baseUrl}}/billing/invoices/{{invoiceId}}/pdf",
          "host": ["{{baseUrl}}"],
          "path": ["billing", "invoices", "{{invoiceId}}", "pdf"]
        }
      }
    },
    {
      "name": "Dashboard Widgets",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": { "raw": "{{baseUrl}}/dashboard/widgets", "host": ["{{baseUrl}}"], "path": ["dashboard", "widgets"] }
      }
    }
  ]
}
