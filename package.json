{
  "name": "sijil-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspace @masar/web",
    "build:all": "npm run build --workspaces",
    "pretest": "npm run prisma:generate --workspace @sijil/api",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspace @masar/web",
    "test:rls": "tsx scripts/rls-smoke-test.ts"
  },
  "devDependencies": {
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "dotenv": "^17.3.1"
  }
}
